// Prisma schema for Railway (PostgreSQL)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid()) @db.Uuid
  email       String   @unique
  username    String   @unique
  passwordHash String   @map("password_hash")
  avatarUrl   String?  @map("avatar_url")
  role        String   // 'user' | 'admin' | 'moderator'
  preferences Json?    
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  projects    Project[]
}

model Project {
  id           String   @id @default(uuid()) @db.Uuid
  title        String
  description  String?
  thumbnailUrl String?  @map("thumbnail_url")
  status       String   // 'draft' | 'in_progress' | 'completed' | 'archived'
  tags         String[]
  metadata     Json?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  userId       String   @db.Uuid @map("user_id")
  user         User     @relation(fields: [userId], references: [id])
  scenes       Scene[]
  timeline     Timeline?
}

model Scene {
  id           String   @id @default(uuid()) @db.Uuid
  title        String
  description  String
  prompt       Json
  thumbnailUrl String?  @map("thumbnail_url")
  duration     Int
  order        Int
  status       String   // 'pending' | 'generating' | 'completed' | 'failed'
  aiGenerated  Boolean  @default(false) @map("ai_generated")
  projectId    String   @db.Uuid @map("project_id")
  project      Project  @relation(fields: [projectId], references: [id])
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
}

model Preset {
  id           String   @id @default(uuid()) @db.Uuid
  name         String
  description  String
  category     String
  tags         String[]
  thumbnailUrl String?  @map("thumbnail_url")
  data         Json
  isPublic     Boolean  @default(false) @map("is_public")
  userId       String   @db.Uuid @map("user_id")
  downloads    Int      @default(0)
  rating       Decimal  @default(0)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
}

model Timeline {
  id            String   @id @default(uuid()) @db.Uuid
  projectId     String   @db.Uuid @map("project_id") @unique
  project       Project  @relation(fields: [projectId], references: [id])
  beads         Json[]   @default([])
  totalDuration Int      @default(0) @map("total_duration")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
}

// === Unified Pipeline Minimal Entities ===

model Scenario {
  id          String   @id @default(uuid()) @db.Uuid
  title       String
  logline     String?
  structure4  Json?    // 4-step structure
  shots12     Json?    // 12-shot breakdown
  pdfUrl      String?  @map("pdf_url")
  version     Int      @default(1)
  createdBy   String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  prompts     Prompt[]
}

model Prompt {
  id           String   @id @default(uuid()) @db.Uuid
  scenarioId   String   @db.Uuid @map("scenario_id")
  scenario     Scenario @relation(fields: [scenarioId], references: [id])
  metadata     Json
  timeline     Json
  negative     Json?
  version      Int      @default(1)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  videoAssets  VideoAsset[]
}

model VideoAsset {
  id         String   @id @default(uuid()) @db.Uuid
  promptId   String   @db.Uuid @map("prompt_id")
  prompt     Prompt   @relation(fields: [promptId], references: [id])
  provider   String   // 'seedance' | 'veo3'
  status     String   // 'queued' | 'processing' | 'completed' | 'failed'
  url        String?  // final video url
  codec      String?  
  duration   Int?     // seconds
  version    Int      @default(1)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
}

model ShareToken {
  id         String   @id @default(uuid()) @db.Uuid
  token      String   @unique
  role       String   // 'viewer' | 'commenter'
  nickname   String?
  targetType String   // 'project' | 'scenario' | 'prompt' | 'video'
  targetId   String
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
}

model Comment {
  id         String   @id @default(uuid()) @db.Uuid
  targetType String   // 'video' | 'project'
  targetId   String
  author     String?  // nickname or user id
  text       String
  timecode   String?  // mmssfff
  createdAt  DateTime @default(now()) @map("created_at")
}


