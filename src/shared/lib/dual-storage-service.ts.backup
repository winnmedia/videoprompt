  try {
    // 1. Prismaì— ì €ì¥ ì‹œë„ (íšŒë¡œ ì°¨ë‹¨ê¸° ì ìš©)
    console.log('ğŸ“ Prisma ì €ì¥ ì‹œë„...');
    try {
      prismaResult = await prismaCircuitBreaker.execute(async () => {
        return await prisma.story.create({
          data: {
            title: input.title,
            oneLineStory: input.oneLineStory,
