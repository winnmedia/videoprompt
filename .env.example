# VideoPlanet API 환경변수 예제
# .env.local 파일을 생성하고 이 내용을 복사하여 실제 값을 입력하세요

# Supabase (인증 및 데이터베이스)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# AI API Keys
GEMINI_API_KEY=your-gemini-api-key

# ByteDance Seedream API
SEEDREAM_API_KEY=your-bytedance-seedream-api-key
SEEDREAM_API_URL=https://api.bytedance.com/seedream/v1

# API 설정
# Rate Limiting - 분당 최대 요청 수 (기본값: 10)
API_RATE_LIMIT=10

# 비용 임계치 - 시간당 최대 비용 (USD, 기본값: 50)
API_COST_THRESHOLD=50

# 애플리케이션 URL (CORS 설정용)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 환경 설정
NODE_ENV=development

# 선택적 설정
# Redis URL (프로덕션 Rate Limiting용)
REDIS_URL=redis://localhost:6379

# 로깅 레벨
LOG_LEVEL=info

# 세션 설정
SESSION_SECRET=your-session-secret-at-least-32-characters-long

# 이메일 설정 (Magic Link용)
EMAIL_FROM=noreply@videoplanet.com
EMAIL_REPLY_TO=support@videoplanet.com