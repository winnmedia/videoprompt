{
  "name": "videoplanet",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "prebuild": "node scripts/verify-build.js",
    "build": "next build",
    "postbuild": "node scripts/verify-build.js && echo 'âœ… Build verification passed'",
    "postinstall": "prisma generate",
    "start": "next start",
    "verify-deployment": "node scripts/verify-build.js",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e:dev": "PW_BASE_URL=http://localhost:3000 playwright test",
    "test:e2e:ui": "PW_BASE_URL=http://localhost:3000 playwright test --ui",
    "test:integration": "INTEGRATION_TEST=true vitest run src/__tests__/auth-api-integration.test.ts",
    "test:health": "INTEGRATION_TEST=true vitest run src/__tests__/production-health-monitor.test.ts",
    "test:production": "INTEGRATION_TEST=true pnpm run test:health && pnpm run test:integration",
    "test:production:local": "TEST_ENVIRONMENT=local INTEGRATION_TEST=true pnpm run test:production",
    "test:production:remote": "TEST_ENVIRONMENT=production INTEGRATION_TEST=true pnpm run test:production",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "test:e2e": "playwright test",
    "test:e2e:production": "playwright test --config=playwright.production.config.ts",
    "test:e2e:production:smoke": "playwright test tests/production/smoke-production.spec.ts --config=playwright.production.config.ts",
    "test:e2e:production:auth": "playwright test tests/production/auth-production.spec.ts --config=playwright.production.config.ts",
    "test:e2e:production:nav": "playwright test tests/production/navigation-production.spec.ts --config=playwright.production.config.ts",
    "test:e2e:production:full": "./scripts/test-production.sh",
    "test:mcp": "node scripts/test-mcp-servers.js",
    "test:mcp:enhanced": "pnpm test -- src/__tests__/mcp-enhanced-testing.test.ts",
    "test:mcp:integration": "pnpm test -- src/__tests__/mcp-real-integration.test.ts",
    "test:mcp:website": "pnpm test -- src/__tests__/mcp-real-website.test.ts",
    "test:mcp:performance": "pnpm test -- src/__tests__/mcp-performance.test.ts",
    "test:mcp:all": "./scripts/run-mcp-tests.sh",
    "test:mcp:ci": "pnpm run test:mcp:enhanced && pnpm run test:mcp:integration && pnpm run test:mcp:website && pnpm run test:mcp:performance",
    "test:video-feedback": "pnpm test -- src/__tests__/video-feedback-core.test.ts",
    "test:video-feedback:ui": "pnpm test -- src/__tests__/video-feedback-ui-simple.test.tsx",
    "test:video-feedback:e2e": "playwright test src/__tests__/video-feedback-e2e.test.ts",
    "test:video-feedback:all": "pnpm run test:video-feedback && pnpm run test:video-feedback:ui && pnpm run test:video-feedback:e2e",
    "monitor:mcp": "node scripts/mcp-performance-monitor.js monitor",
    "report:mcp": "node scripts/mcp-performance-monitor.js report",
    "notify:mcp:test": "node scripts/mcp-notification-service.js test",
    "setup:mcp:notifications": "node scripts/mcp-notification-service.js config",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "dep:check": "madge --circular --extensions ts,tsx src",
    "migrate:v3": "tsx scripts/migrate-to-v3.ts migrate",
    "migrate:v3:dry": "tsx scripts/migrate-to-v3.ts migrate --dry-run",
    "migrate:v3:rollback": "tsx scripts/migrate-to-v3.ts rollback",
    "migrate:v3:status": "tsx scripts/migrate-to-v3.ts status"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "@reduxjs/toolkit": "^2.9.0",
    "@sendgrid/mail": "^8.1.5",
    "@tanstack/react-query": "^5.87.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "google-auth-library": "^10.2.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.540.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-redux": "^9.2.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@playwright/mcp": "^0.0.34",
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tanstack/react-query-devtools": "^5.87.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "dotenv": "^17.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jsdom": "^26.1.0",
    "madge": "^6.1.0",
    "msw": "^2.11.1",
    "playwright": "^1.55.0",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "prisma": "^5.18.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
