# VideoPlanet 환경변수 설정 (Railway / Supabase 호환)
# ================================

# 기본 설정
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=VideoPlanet
NEXT_PUBLIC_APP_VERSION=1.0.0

# Railway / Database 설정
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME?schema=public

# Supabase(선택적, 기존 호환용)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# AI 서비스 설정
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# 파일 업로드 설정 (스토리지 선택)
NEXT_PUBLIC_SUPABASE_STORAGE_URL=
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/quicktime

# 보안 설정
JWT_SECRET=your_jwt_secret_key_here
COOKIE_SECRET=your_cookie_secret_here

# 로깅 설정
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# 모니터링 설정
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id_here

# 개발용 설정
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_MOCK_API=true
NEXT_PUBLIC_MOCK_DELAY=1000

# ================================
# Supabase 데이터베이스 스키마
# ================================

# 사용자 테이블 (users)
# - id: uuid (primary key)
# - email: text (unique)
# - username: text (unique)
# - avatar_url: text
# - role: text (user, admin, moderator)
# - preferences: jsonb
# - created_at: timestamp
# - updated_at: timestamp

# 프로젝트 테이블 (projects)
# - id: uuid (primary key)
# - title: text
# - description: text
# - thumbnail_url: text
# - status: text (draft, in_progress, completed, archived)
# - user_id: uuid (foreign key to users.id)
# - created_at: timestamp
# - updated_at: timestamp
# - tags: text[]
# - metadata: jsonb

# 장면 테이블 (scenes)
# - id: uuid (primary key)
# - title: text
# - description: text
# - prompt: jsonb
# - thumbnail_url: text
# - duration: integer
# - order: integer
# - status: text (pending, generating, completed, failed)
# - ai_generated: boolean
# - project_id: uuid (foreign key to projects.id)
# - created_at: timestamp
# - updated_at: timestamp

# 프리셋 테이블 (presets)
# - id: uuid (primary key)
# - name: text
# - description: text
# - category: text
# - tags: text[]
# - thumbnail_url: text
# - data: jsonb
# - is_public: boolean
# - user_id: uuid (foreign key to users.id)
# - downloads: integer
# - rating: numeric
# - created_at: timestamp
# - updated_at: timestamp

# 타임라인 테이블 (timelines)
# - id: uuid (primary key)
# - project_id: uuid (foreign key to projects.id)
# - beads: jsonb[]
# - total_duration: integer
# - created_at: timestamp
# - updated_at: timestamp

# ================================
# API 엔드포인트 목록 (Supabase Functions)
# ================================

# 사용자 인증 관련 API (Supabase Auth)
# POST /auth/register - 사용자 회원가입
# POST /auth/login - 사용자 로그인
# POST /auth/logout - 사용자 로그아웃
# POST /auth/refresh - 토큰 갱신
# GET /auth/me - 현재 사용자 정보
# PUT /auth/profile - 사용자 프로필 수정

# 프로젝트 관리 API (Supabase Database)
# GET /projects - 프로젝트 목록 조회
# POST /projects - 새 프로젝트 생성
# GET /projects/:id - 프로젝트 상세 조회
# PUT /projects/:id - 프로젝트 수정
# DELETE /projects/:id - 프로젝트 삭제
# POST /projects/:id/duplicate - 프로젝트 복제

# 장면 생성 API (Supabase Functions + AI)
# POST /scenes/generate - AI 장면 생성 (OpenAI/Gemini)
# POST /scenes/enhance - 장면 프롬프트 강화
# GET /scenes/:id - 장면 상세 조회
# PUT /scenes/:id - 장면 수정
# DELETE /scenes/:id - 장면 삭제

# 프리셋 관리 API (Supabase Database)
# GET /presets - 프리셋 목록 조회
# POST /presets - 새 프리셋 생성
# GET /presets/:id - 프리셋 상세 조회
# PUT /presets/:id - 프리셋 수정
# DELETE /presets/:id - 프리셋 삭제
# GET /presets/categories - 프리셋 카테고리 목록

# 타임라인 관리 API (Supabase Database)
# GET /timelines/:id - 타임라인 조회
# PUT /timelines/:id - 타임라인 수정
# POST /timelines/:id/beads - 타임라인 구슬 추가
# PUT /timelines/:id/beads/:beadId - 구슬 수정
# DELETE /timelines/:id/beads/:beadId - 구슬 삭제

# AI 추천 API (Supabase Functions + AI)
# POST /recommend/scenes - 장면 추천 (OpenAI/Gemini)
# POST /recommend/prompts - 프롬프트 추천
# POST /recommend/themes - 테마 추천
# GET /recommend/trending - 트렌딩 추천

# 파일 업로드 API (Supabase Storage)
# POST /upload/image - 이미지 업로드
# POST /upload/video - 비디오 업로드
# POST /upload/audio - 오디오 업로드
# DELETE /upload/:id - 파일 삭제

# ================================
# 환경별 설정
# ================================

# 개발 환경
# NODE_ENV=development
# NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
# NEXT_PUBLIC_ENABLE_DEBUG=true
# NEXT_PUBLIC_ENABLE_MOCK_API=true

# 스테이징 환경
# NODE_ENV=staging
# NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
# NEXT_PUBLIC_ENABLE_DEBUG=false
# NEXT_PUBLIC_ENABLE_MOCK_API=false

# 프로덕션 환경
# NODE_ENV=production
# NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
# NEXT_PUBLIC_ENABLE_DEBUG=false
# NEXT_PUBLIC_ENABLE_MOCK_API=false
