# VideoPlanet 환경변수 설정
# ================================

# 기본 설정
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=VideoPlanet
NEXT_PUBLIC_APP_VERSION=1.0.0

# 데이터베이스(선택)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME?schema=public

# AI 서비스 설정
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# 이미지 생성 설정 (Google Imagen)
IMAGEN_PROVIDER=google
IMAGEN_LLM_MODEL=imagen-4.0-fast-generate-preview-06-06

# 동영상 생성 설정 (Google Veo)
VEO_PROVIDER=google
VEO_MODEL=veo-3.0-generate-preview

# Seedance/ModelArk 설정
SEEDANCE_API_KEY=your_seedance_api_key_here
SEEDANCE_API_BASE=https://ark.ap-southeast.bytepluses.com
SEEDANCE_MODEL=ep-your-model-id-here

# 파일 업로드 설정
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/quicktime

# 보안 설정
JWT_SECRET=your_jwt_secret_key_here
COOKIE_SECRET=your_cookie_secret_key_here

# 로깅 설정
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# 모니터링 설정
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id_here

# 개발용 설정
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_MOCK_API=true
NEXT_PUBLIC_MOCK_DELAY=1000
